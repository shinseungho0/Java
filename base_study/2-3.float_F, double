package sec03.exam02;

public class RunStatementExample {
	public static void main(String[] args) {
		/*실수값 저장 
		 * 자바는 실수 리터럴을 기본적으로 double타입으로 해석
		 * 실수 리터럴을 float 타입 변수에 저장하면 컴파일 에러
		 * float 타입으로 저장하려면 리터럴 뒤에 f나 F 붙히기 
		 */
		//float var1 = 3.14; 컴파일 에러
		float var2 = 3.14f; // 리터럴뒤에 f 붙임
		double var3 = 3.14;
		
		/*정밀도 테스트
		 * float는 소수점 이하 자리 7자리
		 * double은 소수점 이하 자리 15자리
		 */
		float var4 = 0.1234567890123456789f;
		double var5 = 0.1234567890123456789;
		
		System.out.println("var2: "+ var2);
		System.out.println("var3: "+ var3 + "\n");
		System.out.println("var4: "+ var4);
		System.out.println("var5: "+ var5 + "\n");
		
		/*e 사용하기
		 * 5e2 -> 5.0 * 10**2 = 500.0
		 */
		double var6 = 3e6;
		float var7 = 3e6F;
		double var8 = 2E-3;
		System.out.println("var6: " + var6);
		System.out.println("var7: " + var7);
		System.out.println("var8: " + var8);
	}
}

/* 실행결과
 * var2: 3.14
var3: 3.14

var4: 0.12345679
var5: 0.12345678901234568

var6: 3000000.0
var7: 3000000.0
var8: 0.002
*/
